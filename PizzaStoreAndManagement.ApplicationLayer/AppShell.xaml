<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PizzaStoreAndManagement.ApplicationLayer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PizzaStoreAndManagement.ApplicationLayer.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="PizzaStoreAndManagement.Pages.ApplicationLayer">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegPage}"
        Route="RegPage" />
    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MenuPage}"
        Route="MenuPage"/>
</Shell>
